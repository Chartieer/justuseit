{
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-plugin-prettier",
    "tslint-config-prettier"
  ],
  "rules": {
    "prettier": true,
    "no-string-literal": false,
    "no-bitwise": false,
    "jsx-boolean-value": ["never"],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template",
      "jsx-double"
    ],

    "no-implicit-dependencies": false,
    "interface-name": false,
    "no-namespace": false,
    "no-unused-expression": false
  }
}
