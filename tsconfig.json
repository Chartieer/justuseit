{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@justuseit/*": ["packages/*/src"],
      "*": ["node_modules", "packages"]
    }
  },

  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core"
  },
  "include": ["packages", "index.d.ts"],
  "exclude": ["node_modules", "packages/**/dist"]
}
